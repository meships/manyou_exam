<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タスク名</th>
    <th>内容</th>
  <tr>
  <% @tasks.each do |task| %>
    <td><%= task.title></td>
    <td><%= task.content %></td>

    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to 'タスクを編集する', edit_task_path(task.id) %></td>
    <td><%= link_to 'タスクを削除する', task_path(task.id), method: :delete,date %></td>
  <% end %>
</table>