<h1>タスク一覧</h1>

<p><%= notice %></p>


<%= form_with(scope: :search, method: :get, local: true) do |form| %>

 <div class="form-group">
   <%=form.label :stetus, "ステータス" %>
   <%= form.select :status, options_for_select(Task.statuses), include_blank: true %>
   <%= form.label :title, "タイトル" %>
   <%= form.text_field :title %>
 </div>
 <div>
   <%= form.submit '検索', class: "search-btn" %>
 </div>

<% end %>

<table>
  <tr>
    <th>タスク名</th>
    <th>内容</th>
    <th><%= link_to "終了期限", sort_limit: true, class: "search-btn"%></th>
    <th>ステータス</th>
    <th><%= link_to "優先度", sort_priority: true, class: "search-btn"%></th>

    <%#<th><%= sort_order "limit", "終了期限"%></th>
    <%#<th><%= sort_order "priority", "優先度"%></th>

  <tr>
  <% @tasks.each do |task| %>
    <tr class = "task_row">
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.limit %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>

      <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
      <td><%= link_to 'タスクを編集する', edit_task_path(task.id) %></td>
      <td><%= link_to 'タスクを削除する', task_path(task.id), method: :delete,data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to '新しくタスクを投稿する', new_task_path %>